{
  "name": "ruijinen-block-patterns",
  "description": "",
  "main": "index.js",
  "scripts": {
   "export:wp-content:themes": "yarn cli 'cp -r wp-content/themes .export/wp-content'",
    "export:wp-content:uploads": "yarn cli 'cp -r wp-content/uploads .export/wp-content'",
    "export:wp-content": "yarn cli 'rm -rf .export/wp-content' && mkdir -p .export/wp-content/uploads && run-p export:wp-content:*",
    "export:db": "mkdir -p .export/sql && yarn wp 'db export .export/sql/local.sql'",
    "export": "run-p export:*",
    "import:wp-content:themes": "yarn cli 'cp -r .export/wp-content/themes wp-content'",
    "import:wp-content:uploads": "yarn cli 'cp -r .export/wp-content/uploads wp-content'",
    "import:wp-content": "run-p import:wp-content:*",
    "import:db": "yarn wp 'db import .export/sql/local.sql'",
    "import": "run-p import:*",
    "wp-env": "wp-env",
    "start": "wp-env start && open http://localhost:1001",
    "stop": "yarn export && wp-env stop",
    "cli": "wp-env run cli",
    "wp": "wp-env run cli wp",
    "clean": "run-s clean:**",
    "clean:css": "del-cli dist/css/**/* dist/css/*.css -f",
    "build": "run-s clean build:**",
    "build:sass": "sass src/css:dist/css block-styles:dist/css/block-styles --no-error-css --no-source-map",
    "build:postcss": "postcss dist/css --base ./dist/css -d dist/css",
    "debug:css": "sass src/css:dist/css block-styles:dist/css/block-styles patterns:dist/css/patterns",
    "watch": "run-s watch:css",
    "watch:css": "run-s clean:css watch:sass watch:postcss",
    "watch:sass": "sass src/css:dist/css block-styles:dist/css/block-styles patterns:dist/css/patterns --no-error-css --no-source-map --watch",
    "watch:postcss": "postcss dist/css --base ./dist/css -d dist/css --watch",
    "backstop_reference": "yarn run backstop reference",
    "backstop_test": "yarn run backstop test",
    "backstop_approve": "yarn run backstop approve",
    "backstop": "node ./backstop_data/runner.js"
  },
  "author": "mgn",
  "license": "GPL-2.0+",
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "cssnano": "^5.0.16",
    "del-cli": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-sorting": "^7.0.1",
    "postcss-sort-media-queries": "^4.2.1",
    "sass": "^1.49.0",
    "stylelint-order": "^5.0.0",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "@wordpress/env": "^4.9.0",
    "@wordpress/scripts": "^23.3.0",
    "backstopjs": "^6.1.0",
    "cpy-cli": "^4.1.0",
    "glob": "^8.0.3",
    "rimraf": "^3.0.2"
  },
  "browserslist": [
    ">0.25% in JP",
    "not ie < 11",
    "iOS >= 10",
    "Android >= 4.4"
  ]
}
