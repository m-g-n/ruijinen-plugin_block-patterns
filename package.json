{
  "name": "ruijinen-block-patterns",
  "description": "",
  "main": "index.js",
  "scripts": {
    "export:wp-content:themes": "npm run cli cp -- -r wp-content/themes .export/wp-content",
    "export:wp-content:uploads": "npm run cli cp -- -r wp-content/uploads .export/wp-content",
    "export:wp-content": "npm run cli rm -- -rf .export/wp-content && mkdir -p .export/wp-content/uploads && run-p export:wp-content:*",
    "export:db": "mkdir -p .export/sql && npm run wp db -- export .export/sql/local.sql",
    "export": "run-p export:*",
    "import:wp-content:themes": "npm run cli cp -- -r .export/wp-content/themes wp-content",
    "import:wp-content:uploads": "npm run cli cp -- -r .export/wp-content/uploads wp-content",
    "import:wp-content": "run-p import:wp-content:*",
    "import:db": "npm run wp db -- import .export/sql/local.sql",
    "import": "run-p import:*",
    "wp-env": "wp-env",
    "start": "wp-env start && open http://localhost:1001",
    "stop": "npm run export && wp-env stop",
    "cli": "wp-env run cli",
    "wp": "wp-env run cli wp",
    "clean": "run-s 'clean:**'",
    "clean:all": "del-cli 'dist/**/*' 'dist/**/*' -f",
    "build": "run-s 'clean build:**'",
    "build:sass": "sass src/css:dist/css block-styles:dist/css/block-styles --no-error-css --no-source-map",
    "build:postcss": "postcss dist/css --base ./dist/css -d dist/css",
    "build:img": "node imagemin.mjs",
    "debug:css": "sass src/css:dist/css block-styles:dist/css/block-styles patterns:dist/css/patterns",
    "watch": "run-s 'watch:css'",
    "watch:css": "sass src/css:dist/css block-styles:dist/css/block-styles patterns:dist/css/patterns --no-error-css --no-source-map --watch | postcss dist/css --base ./dist/css -d dist/css --watch",
    "backstop_reference": "npm run backstop reference",
    "backstop_test": "npm run backstop test",
    "backstop_approve": "npm run backstop approve",
    "backstop": "node ./backstop_data/runner.js"
  },
  "author": "mgn",
  "license": "GPL-2.0+",
  "devDependencies": {
    "@wordpress/env": "^5.16.0",
    "@wordpress/scripts": "^30.4.0",
    "autoprefixer": "^10.4.20",
    "backstopjs": "^6.1.4",
    "cpy-cli": "^4.2.0",
    "cssnano": "^5.1.15",
    "del-cli": "^5.1.0",
    "glob": "^8.1.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "9.0.2",
    "imagemin-svgo": "10.0.1",
    "imagemin-webp": "8.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "postcss-cli": "^10.1.0",
    "postcss-sort-media-queries": "^4.4.1",
    "postcss-sorting": "^8.0.2",
    "rimraf": "^4.4.1",
    "sass": "^1.57.1",
    "stylelint-order": "^6.0.4",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  },
  "browserslist": [
    ">0.25% in JP",
    "not ie < 11",
    "iOS >= 10",
    "Android >= 4.4"
  ],
  "volta": {
    "node": "14.21.1"
  }
}
