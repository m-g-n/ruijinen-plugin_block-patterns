{
	"name": "ruijinen-block-patterns",
	"description": "",
	"main": "index.js",
	"scripts": {
		"clean": "run-s clean:**",
		"clean:css": "del-cli dist/css/**/* dist/css/*.css -f",
		"build": "run-s clean build:**",
		"build:sass": "sass src/css:dist/css block-styles:dist/css/block-styles --no-error-css --no-source-map",
		"build:postcss": "postcss dist/css --base ./dist/css -d dist/css",
		"debug:css": "sass src/css:dist/css block-styles:dist/css/block-styles patterns:dist/css/patterns",
		"watch": "run-s watch:css",
		"watch:css": "run-s clean:css watch:sass watch:postcss",
		"watch:sass": "sass src/css:dist/css block-styles:dist/css/block-styles patterns:dist/css/patterns --no-error-css --no-source-map --watch",
		"watch:postcss": "postcss dist/css --base ./dist/css -d dist/css --watch"
	},
	"author": "mgn",
	"license": "GPL-2.0+",
	"devDependencies": {
		"autoprefixer": "^10.4.2",
		"cssnano": "^5.0.16",
		"del-cli": "^4.0.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.5",
		"postcss-cli": "^9.1.0",
		"postcss-sort-media-queries": "^4.2.1",
		"sass": "^1.49.0",
		"stylelint-order": "^5.0.0",
		"webpack": "^5.72.0",
		"webpack-cli": "^4.9.2"
	},
	"browserslist": [
		">0.25% in JP",
		"not ie < 11",
		"iOS >= 10",
		"Android >= 4.4"
	]
}
